
@model ML.Rol
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="=col-md-12">
            <h2>Usuarios</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <h5>Seleccione Agregar para registrar un nuevo usuario.</h5>
        </div>
    </div>
    <div class="row">
        <div class="col-md-1">

            @Html.ActionLink("Agregar", "Form", "Usuario", htmlAttributes: new { @class = "btn btn-success" })
        </div>
        <br> <br />
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-bordered table-responsive">
                <thead class="thead-dark">
                    <tr>
                        <td>Editar</td>
                        <td class="hidden">IdUsuario</td>
                        <td>Nombre</td>
                        <td>Eliminar</td>

                    </tr>
                </thead>
                <tbody>
                    @foreach (ML.Rol rol in Model.Roles)
                    {
                        <tr>
                            <td><a class="btn btn-warning glyphicon-edit" href="@Url.Action("Form", "Usuario", new { IdRol = rol.IdRol })"></a></td>
                            <td class="hidden">@rol.IdRol</td>
                            <td>@rol.Nombre</td>

                            <td><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Usuario", new { IdRol = rol.IdRol })" onclick="return confirm('¿Estas seguro que deseas eliminar este registro?');"></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>

